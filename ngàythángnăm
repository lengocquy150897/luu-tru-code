# luu-tru-code
lưu lại những gì đã học code
/* nhap vao thang, nam. 
cho biet thang cua nam do co bao nhieu ngay?*/

#include <stdio.h>


main() {
	int thang, nam;
	printf("Thang: ");
	scanf("%d", &thang);
	printf("Nam: ");
	scanf("%d", &nam);
	
	switch (thang){
	
		case 1:
		case 3:
		case 5:
		case 7:
		case 8:
		case 10:
		case 12:
			printf("Co 31 ngay"); break;
		
		case 4:
		case 6:
		case 9:
		case 11:
			printf("Co 30 ngay"); break;
		
		case 2:
			if (nam % 4 == 0)
				printf("Co 29 ngay");
			else 
				printf("Co 28 ngay"); break;
		default:
			printf("so lieu sai");}			
}
