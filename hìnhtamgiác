# luu-tru-code
lưu lại những gì đã học code
#include <stdio.h>
#include <math.h>

int main () {
	float a, b, c, p, chuvi, dientich;
	
	printf("nhap a, b, c:");
	scanf("%f %f %f", &a, &b, &c);
	
	chuvi = a + b + c;
	p = (a + b + c)/2;
	dientich = sqrt(p*(p-a)*(p-b)*(p-c));
	
	printf("chuvi: %f, dientich: %f", chuvi, dientich);
	}
	
